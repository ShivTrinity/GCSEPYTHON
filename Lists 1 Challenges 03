name = []
name1 = input("enter a name")
name.append(name1)
name2 = input("enter a name")
name.append(name2)
name3 = input("enter a name")
name.append(name3)
another = input("do you want to enter another? y/n")
while another == "y":
    name1 = input("enter a name")
    another = input("do you want to enter another? y/n")
    name.append(name1)
print(len(name))
